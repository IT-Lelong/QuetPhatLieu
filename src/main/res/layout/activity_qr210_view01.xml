<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/underline"
    android:weightSum="7"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@drawable/page_mode_sample_shape"
        android:orientation="vertical">
        <TextView
            android:id="@+id/qr210_view01_item01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="4.5"
    android:background="@drawable/page_mode_sample_shape"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/qr210_view01_item02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_margin="3dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/qr210_view01_item07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_margin="3dp"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/qr210_view01_item03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            android:gravity="center|left"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/page_mode_sample_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qr210_view01_item06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="2dp"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/qr210_view01_item04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:layout_margin="2dp"
            android:gravity="center"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/qr210_view01_item05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>